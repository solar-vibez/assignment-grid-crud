{
  "extends": ["stylelint-config-standard"],
  "rules": {
    "at-rule-no-deprecated": [
      true,
      {
        "ignoreAtRules": [
          "apply",
          "responsive",
          "screen",
          "tailwind",
          "variants"
        ]
      }
    ],
    "declaration-property-value-no-unknown": [
      true,
      {
        "propertiesSyntax": {
          "background": "| <theme()>",
          "background-color": "| <theme()>",
          "border": "| <theme()>",
          "border-color": "| <theme()>",
          "color": "| <theme()>",
          "fill": "| <theme()>"
        },
        "typesSyntax": {
          "theme()": "theme( <string> )"
        }
      }
    ],
    "no-descending-specificity": null
  }
}
